<div class="input-section">
  <div class="input-group">
    <label for="bill-amount">Bill</label>
    <div class="input-wrapper">
      <input type="number"
             id="bill-amount"
             min="0"
             step="0.01"
             placeholder="0"
             aria-label="bill-amount">
    </div>
  </div>

  <div class="input-group">
    <label>Select Tip %</label>
    <div class="tip-buttons">
      <button type="button" class="tip-btn" data-tip="5">5%</button>
      <button type="button" class="tip-btn" data-tip="10">10%</button>
      <button type="button" class="tip-btn" data-tip="15">15%</button>
      <button type="button" class="tip-btn" data-tip="25">25%</button>
      <button type="button" class="tip-btn" data-tip="50">50%</button>
      <input type="number"
             class="tip-btn custom"
             placeholder="Custom"
             min="0"
             aria-label="custom-tip">
    </div>
  </div>

  <div class="input-group">
    <label for="people-count">Number of People </label>
    <div class="input-wrapper">
      <input type="number"
             id="people-count"
             min="1"
             placeholder="0"
             aria-label="number-of-people">
    </div>
  </div>

  <div id="error-display" class="error-display"></div>
</div>
